trainings ={
    'Онбордінг':{
        'відповідальний': 'Григоров О. С',
        'теми': ['техніка безпеки', 'робота в команді'],
        'дата': '15.05'
    },
    'Підвищення кваліфікації':{
        'відповідальний': 'Череватий К. І.',
        'теми': ['лідерство', 'комп. грамотність'],
        'дата':' 20.11'
    }
}
print('Тренінги ProTeam')
print("1-назви тренінгів, 2-інфо про тренінг")
while True:
    answer = int(input('Номер дії(off- вийти):'))
    if answer == 1:
        print("-Онбордінг")
        print('-Підвищення кваліфікації')
    if answer == 2:
        title=input("Назва тренінга:")
        if title == "Онбордінг":
            print(trainings['Онбордінг'['відповідальний']])
            print(trainings['Онбордінг'['теми']])
            print(trainings['Онбордінг'[str('дата')]])
        elif title =='Підвищення кваліфікації':
            print(trainings['Підвищення кваліфікації'['відповідальний']])
            print(trainings['Підвищення кваліфікації'['теми']])
            print(trainings['Підвищення кваліфікації'[str('дата')]])
        elif answer!=trainings:
            print('Такого тренінгу не існує')
    if answer == 'off':
        break
           

